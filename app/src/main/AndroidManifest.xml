<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.eyssyapps.utilities_suite"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.eyssyapps.utilities_suite.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.eyssyapps.utilities_suite.activities.deviceinteraction.DeviceInteractionActivity"
            android:label="@string/title_activity_device_interaction"
            android:parentActivityName="com.eyssyapps.utilities_suite.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eyssyapps.utilities_suite.activities.MainActivity"/>
        </activity>
        <activity
            android:name="com.eyssyapps.utilities_suite.activities.deviceinteraction.InteractionSettingsActivity"
            android:label="@string/title_activity_interaction_settings"
            android:parentActivityName="com.eyssyapps.utilities_suite.activities.deviceinteraction.DeviceInteractionActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.eyssyapps.utilities_suite.activities.deviceinteraction.DeviceInteractionActivity"/>
        </activity>
    </application>

</manifest>